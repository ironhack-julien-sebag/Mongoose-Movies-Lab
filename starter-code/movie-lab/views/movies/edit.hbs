{{#with movie}}

<a href="/movies/{{_id}}">Back</a>

<h1>Edit {{ title }}</h1>

<form action="/movies" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="{{title}}">

    <label for="year">Year</label>
    <input type="number" name="year" id="year" value="{{year}}">

    <label for="director">Director</label>
    <input type="text" name="director" id="director" value="{{director}}">

    <label for="duration">Duration</label>
    <input type="text" name="duration" id="duration" value="{{duration}}">

    <label for="genre">Genre</label>
    <input type="text" name="genre" id="genre" value="{{genre}}">

    <label for="rate">Rate</label>
    <input type="number" name="rate" id="rate" value="{{rate}}">

    <label for="plot">Plot</label>
    <textarea name="plot" id="plot">{{plot}}</textarea>

    <label for="poster">Poster</label>
    <input type="text" name="poster" id="poster" value="{{poster}}">

    <label for="cast">Cast</label>
    
    <select name="cast" id="cast" class="castSelect" multiple>
        {{!-- {{#each celebrity}} --}}
        {{!-- <option value="{{this.id}}">{{this.name}}</option> --}}
        {{!-- {{{selector ../movie}}} --}}
        {{!-- <option value="{{celebrity._id}}">${celebrity.name}</option> --}}
        {{{options}}}
        {{!-- {{/each}} --}}
    </select>

    <button type="submit">Edit {{title}}</button>
</form>
{{/with}}
